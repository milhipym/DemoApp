<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/modal_bg_bottom_sheet_rounded</item>
    </style>

    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item> <!-- 0.7로 딤을 더 진하게 -->
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/modal_bg_bottom_sheet_rounded</item>
    </style>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 상태바 색상 -->
        <item name="android:statusBarColor">#F8FAFC</item>
        <!-- 내비게이션바 색상 -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 상태바 투명 설정 (Optional) -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 내비게이션바 투명 설정 (Optional) -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>