<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene_star_motion"
    android:background="#F8FAFC">

    <LinearLayout
        android:id="@+id/starGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star"
            android:tint="#FFD600"
            android:contentDescription="별 1" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star"
            android:tint="#FFD600"
            android:contentDescription="별 2" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star"
            android:tint="#FFD600"
            android:contentDescription="별 3" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star"
            android:tint="#FFD600"
            android:contentDescription="별 4" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star"
            android:tint="#FFD600"
            android:contentDescription="별 5" />
    </LinearLayout>
</androidx.constraintlayout.motion.widget.MotionLayout>
