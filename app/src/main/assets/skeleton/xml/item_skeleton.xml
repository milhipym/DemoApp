<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- 이미지 영역 스켈레톤 -->
    <View
        android:id="@+id/skeletonImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_skeleton_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 첫 번째 텍스트 영역 (80% 너비) -->
    <View
        android:id="@+id/skeletonText1"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_skeleton_rounded"
        app:layout_constraintStart_toEndOf="@id/skeletonImage"
        app:layout_constraintTop_toTopOf="@id/skeletonImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginStart="16dp"/>

    <!-- 두 번째 텍스트 영역 (60% 너비) -->
    <View
        android:id="@+id/skeletonText2"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_skeleton_rounded"
        app:layout_constraintStart_toStartOf="@id/skeletonText1"
        app:layout_constraintTop_toBottomOf="@id/skeletonText1"
        app:layout_constraintEnd_toEndOf="@id/skeletonText1"
        app:layout_constraintWidth_percent="0.6"
        android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
